  <div class="schedule-item">1:00 PM ‚Äì Workshop: Building Engagement</div>
</section>

<section id="announcements">
  <h2>Live Announcements</h2>
  <div class="announcement" id="announcement-box">No announcements yet.</div>
  <input type="text" id="announcement-input" placeholder="Type announcement..." />
  <button onclick="sendAnnouncement()">Send Announcement</button>
</section>

<section id="poll">
  <h2>Live Poll</h2>
  <p>How satisfied are you with the event so far?</p>
  <button onclick="vote('üëç')">üëç</button>
  <button onclick="vote('üëé')">üëé</button>
  <div class="poll-result" id="poll-result"></div>
</section>

<section id="feedback">
  <h2>Session Feedback</h2>
  <textarea id="feedback-text" rows="4" placeholder="Share your thoughts..."></textarea>
  <button onclick="submitFeedback()">Submit Feedback</button>
  <p id="feedback-msg"></p>
</section>

<script>
  function register() {
    const name = document.getElementById('name').value;
    const email = document.getElementById('email').value;
    const ticket = document.getElementById('ticket').value;
    if (name && email) {
      document.getElementById('reg-msg').textContent = `Thanks for registering, ${name}! Ticket type: ${ticket}`;
    } else {
      document.getElementById('reg-msg').textContent = 'Please fill out all fields.';
    }
  }

  function sendAnnouncement() {
    const msg = document.getElementById('announcement-input').value;
    if (msg) {
      document.getElementById('announcement-box').textContent = msg;
      document.getElementById('announcement-input').value = '';
    }
  }

  let votes = { 'üëç': 0, 'üëé': 0 };
  function vote(type) {
    votes[type]++;
    document.getElementById('poll-result').textContent = `üëç: ${votes['üëç']} | üëé: ${votes['üëé']}`;
  }

  function submitFeedback() {
    const feedback = document.getElementById('feedback-text').value;
    if (feedback) {
      document.getElementById('feedback-msg').textContent = 'Thanks for your feedback!';
      document.getElementById('feedback-text').value = '';
    } else {
      document.getElementById('feedback-msg').textContent = 'Please enter your feedback.';
    }
  }
</script>

</body>
